---
import Feedback from "@/components/react/feedback";
import "../styles/global.css";
import { SITE_EMAIL, SITE_NAME } from "../var.ts";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = `${SITE_NAME} - AI-Powered Productivity App`,
  description = `${SITE_NAME} is an AI-powered app that helps users overcome procrastination and improve productivity by breaking down goals into manageable steps.`,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Step Joy, productivity, procrastination, AI assistant, goal management, task breakdown"
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://images.unsplash.com/photo-1551434678-e076c223a692?w=1200&h=630&fit=crop"
    />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <div class="flex items-center">
            <a href="/" class="flex items-center cursor-pointer">
              <img src="/logo.png" alt={SITE_NAME} class="h-8 w-8 mr-2" />
              <span class="text-xl font-bold text-gray-900">{SITE_NAME}</span>
            </a>
          </div>

          <!-- Navigation -->
          <nav class="hidden md:flex space-x-8">
            <a
              href="#home"
              class="text-gray-600 hover:text-gray-900 cursor-pointer transition-colors"
            >
              Home
            </a>
            <a
              href="#features"
              class="text-gray-600 hover:text-gray-900 cursor-pointer transition-colors"
            >
              Features
            </a>
            <a
              href="#pricing"
              class="text-gray-600 hover:text-gray-900 cursor-pointer transition-colors"
            >
              Pricing
            </a>
            <a
              href="#about"
              class="text-gray-600 hover:text-gray-900 cursor-pointer transition-colors"
            >
              About
            </a>
          </nav>

          <!-- Mobile menu button -->
          <button class="md:hidden p-2 cursor-pointer" id="mobile-menu-button">
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile menu -->
        <div class="md:hidden hidden" id="mobile-menu">
          <div class="px-2 pt-2 pb-3 space-y-1 border-t border-gray-200">
            <a
              href="#home"
              class="block px-3 py-2 text-gray-600 hover:text-gray-900 cursor-pointer"
              >Home</a
            >
            <a
              href="#features"
              class="block px-3 py-2 text-gray-600 hover:text-gray-900 cursor-pointer"
              >Features</a
            >
            <a
              href="#pricing"
              class="block px-3 py-2 text-gray-600 hover:text-gray-900 cursor-pointer"
              >Pricing</a
            >
            <a
              href="#about"
              class="block px-3 py-2 text-gray-600 hover:text-gray-900 cursor-pointer"
              >About</a
            >
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <Feedback client:load />
    <!-- Footer -->
    <footer class="bg-gray-50 border-t border-gray-200">
      <div class="container mx-auto px-4 sm:pb-6 lg:pb-8 pb-12">
        <!-- Bottom Footer -->
        <div class="pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="text-gray-600 text-sm flex items-center gap-6">
              <div class="flex items-center">
                <img src="/logo.png" alt={SITE_NAME} class="h-8 w-8 mr-2" />
                <span class="text-xl font-bold text-gray-900">{SITE_NAME}</span>
              </div>
              <div>Â© 2024 {SITE_NAME}. All rights reserved.</div>
            </div>
            <div class="flex space-x-6 mt-4 md:mt-0">
              <a
                href="/privacy"
                class="text-gray-600 hover:text-gray-900 text-sm cursor-pointer"
                >Privacy Policy</a
              >
              <a
                href="/terms"
                class="text-gray-600 hover:text-gray-900 text-sm cursor-pointer"
                >Terms of Service</a
              >
              <a
                href={`mailto:${SITE_EMAIL}`}
                class="text-gray-600 hover:text-gray-900 text-sm cursor-pointer"
                >Support</a
              >
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
